# MCP Server Configuration - Environment Variables
# Copy this file to .env and customize for your environment

# ============================================================================
# PATHS
# ============================================================================

# Path to analysis output directory (dist/)
# DIST_PATH=/absolute/path/to/documentation-graph/dist

# Path to source documentation
# DOCS_PATH=/absolute/path/to/docs

# ============================================================================
# SERVER BEHAVIOR
# ============================================================================

# Enable file watching and auto-refresh on data changes
ENABLE_AUTO_REFRESH=true

# Enable in-memory caching
ENABLE_CACHE=true

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Cache TTL in milliseconds (default: 300000 = 5 minutes)
CACHE_TTL=300000

# Cache cleanup interval in milliseconds (default: 60000 = 1 minute)
CACHE_CLEANUP_INTERVAL=60000

# ============================================================================
# PERFORMANCE
# ============================================================================

# Target response time in milliseconds (log warning if exceeded)
PERFORMANCE_TARGET=20000

# Tool execution timeout in milliseconds
TOOL_TIMEOUT=30000

# ============================================================================
# RATE LIMITING
# ============================================================================

# Enable rate limiting (default: false)
ENABLE_RATE_LIMIT=false

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Maximum requests per window (default: 60)
RATE_LIMIT_MAX=60

# ============================================================================
# LOGGING
# ============================================================================

# Logging level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO

# Enable structured JSON logging for production (default: true in production)
ENABLE_STRUCTURED_LOGS=false

# Enable performance metrics tracking (default: true)
ENABLE_METRICS=true

# ============================================================================
# HEALTH MONITORING
# ============================================================================

# Enable health check monitoring (default: true)
ENABLE_HEALTH_CHECK=true

# Health check interval in milliseconds (default: 30000 = 30 seconds)
HEALTH_CHECK_INTERVAL=30000

# ============================================================================
# SECURITY
# ============================================================================

# Enable path validation to prevent directory traversal (default: true)
ENABLE_PATH_VALIDATION=true

# Enable input sanitization (default: true)
ENABLE_INPUT_SANITIZATION=true

# ============================================================================
# CIRCUIT BREAKER
# ============================================================================

# Enable circuit breaker pattern for preventing cascading failures (default: true)
ENABLE_CIRCUIT_BREAKER=true

# Circuit breaker failure threshold before opening (default: 5)
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker timeout in milliseconds before half-open (default: 60000 = 1 minute)
CIRCUIT_BREAKER_TIMEOUT=60000

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Node environment: development, production, test (default: production)
NODE_ENV=production

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# Development - verbose logging with all features enabled
# LOG_LEVEL=DEBUG
# ENABLE_STRUCTURED_LOGS=false
# ENABLE_METRICS=true
# ENABLE_HEALTH_CHECK=true

# Production - optimized for performance
# LOG_LEVEL=INFO
# ENABLE_STRUCTURED_LOGS=true
# ENABLE_METRICS=true
# ENABLE_RATE_LIMIT=true
# NODE_ENV=production

# Testing - minimal features
# LOG_LEVEL=ERROR
# ENABLE_CACHE=false
# ENABLE_AUTO_REFRESH=false
# ENABLE_HEALTH_CHECK=false
# NODE_ENV=test
