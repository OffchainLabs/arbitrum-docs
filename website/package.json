{
  "name": "nitro-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "install_sdk_dependencies": "cd ../arbitrum-sdk && yarn install && cd ../website",
    "generate_sdk_docs": "yarn install_sdk_dependencies && typedoc && node ./src/scripts/sdk-post-process-docs.js",
    "start": "yarn generate_sdk_docs && yarn start_nitro_docs",
    "start_nitro_docs": "docusaurus start",
    "build": "yarn generate_sdk_docs && docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "format": "yarn prettier:format:docs && yarn prettier:format:app",
    "format:app": "prettier --write \"src/**/*.{tsx,ts,scss,md,json,js}\"",
    "format:docs": "prettier \"../arbitrum-docs/**/*.{md,mdx}\" --write --config \"./.prettierrc.js\"",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@arbitrum/sdk": "^3.0.0",
    "@cmfcmf/docusaurus-search-local": "^0.11.0",
    "@docusaurus/core": "^2.3.1",
    "@docusaurus/preset-classic": "^2.3.1",
    "@docusaurus/theme-live-codeblock": "^2.3.1",
    "@docusaurus/theme-mermaid": "^2.3.1",
    "clsx": "^1.2.1",
    "docusaurus-lunr-search": "^2.3.2",
    "docusaurus-plugin-fathom": "^1.1.0",
    "ethers": "5.7.2",
    "got": "11.8.5",
    "posthog-docusaurus": "^2.0.0",
    "prism-react-renderer": "^1.3.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tippy.js": "^6.3.7",
    "trim": "0.0.3"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.1.0",
    "@offchainlabs/prettier-config": "0.2.1",
    "@tsconfig/docusaurus": "^1.0.6",
    "prettier": "^2.8.3",
    "typedoc": "^0.24.8",
    "typedoc-plugin-frontmatter": "^0.0.2",
    "typedoc-plugin-markdown": "4.0.0-next.17",
    "typescript": "^4.7.4"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.14"
  }
}
